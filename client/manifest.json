{
  "manifest_version": 3,
  "name": "YT Tool",
  "description": "Discover the perfect playlist length for your YouTube videos with our YT Tool Extension.",
  "version": "1.0.0",
  "permissions": [ "tabs", "cookies" ],
  "host_permissions" : ["https://*.youtube.com/*"],
  "offline_enabled": false,
  "icons": {
    "16": "images/logo.png",
    "32": "images/logo.png",
    "48": "images/logo.png",
    "128": "images/logo.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_icon": "images/logo.png",
    "default_title": "YT Tool"
  }
}